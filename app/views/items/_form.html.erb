<i class="material-icons icon add_item_button">add</i>
<section class='new-item-form'>
  <%= form_for(@item, remote: true) do |f| %>
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label "New item:" %><br>
      <%= f.text_area :content %>
      
      <% this_id ||= nil %>
      <%= f.hidden_field :list_id, :value => this_id %>
    </div>
    <div class="actions">
      <%= f.submit 'Add item' %>
    </div>
  <% end %>
</section>
