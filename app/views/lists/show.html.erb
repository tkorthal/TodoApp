<section id='list<%= @list.id %>' class='list'>

  <h1><%= @list.title %></h1>
  <p id="notice"><%= notice %><input type='color' id='bgColor'></p>

  <script>
    $("#bgColor").on('change', function (){
      updateBGColor('<%= @list.id %>', $("#bgColor").val());
    });
  </script>
  <section id='new-item-form'>
    <%= render 'items/form', this_id: @list.id %>
  </section>

  <script>
    var listId = '<%= @list.id %>';
    addItemListeners(listId);
  </script>

  <section class='item-list'>
    <%= render @items %>
  </section>
  <script>
    $('#list<%= @list.id %>').css("background-color", '<%= @list.color %>');
  </script>
</section>

